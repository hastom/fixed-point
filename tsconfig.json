{
  "compilerOptions": {
    "module": "commonjs",
    "strictPropertyInitialization": false,
    "declaration": true,
    "target": "ES2020",
    "lib": [
      "ES2020"
    ],
    "moduleResolution": "node",
    "strict": true,
    "noImplicitReturns": true,
    "removeComments": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "outDir": "dist",
    "baseUrl": ".",
    "allowSyntheticDefaultImports": true
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}
